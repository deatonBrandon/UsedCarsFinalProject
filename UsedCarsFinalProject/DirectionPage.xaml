<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="UsedCarsFinalProject.DirectionPage"
             Title="DirectionPage">
    <ScrollView>
        <VerticalStackLayout Spacing="10">
            <FlexLayout JustifyContent="Center">
                <Image Source="{Binding Logo}" />
            </FlexLayout>
            <Image Source="map.png" HeightRequest="450" />
            <Label Text="Starting at the largest patch of green on the map, follow the yellow thing until you cross the blue squiggly line." FontSize="Subtitle" HorizontalTextAlignment="Center" />
            <Label Text="We are in the AutoZone parking lot." FontSize="Subtitle" HorizontalTextAlignment="Center" Margin="0, 0, 0, 20" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>