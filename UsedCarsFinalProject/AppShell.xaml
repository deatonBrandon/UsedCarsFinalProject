<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="UsedCarsFinalProject.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:UsedCarsFinalProject"
    Shell.FlyoutBehavior="Flyout"
    Title="UsedCarsFinalProject">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <ShellContent
        Title="Inventory"
        ContentTemplate="{DataTemplate local:InventoryPage}"
        Route="InventoryPage" />

    <ShellContent
        Title="Directions"
        ContentTemplate="{DataTemplate local:DirectionPage}"
        Route="DirectionPage" />

</Shell>
